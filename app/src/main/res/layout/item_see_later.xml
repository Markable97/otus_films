<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFilmNameLater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEditNotification"
        tools:text="@tools:sample/cities" />
    <ImageButton
        android:id="@+id/btnEditNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tvTimeSeeLater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvFilmNameLater"
        app:layout_constraintEnd_toEndOf="@id/tvFilmNameLater"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        tools:text="Посмотреть 01.01.2021"
        />
</androidx.constraintlayout.widget.ConstraintLayout>